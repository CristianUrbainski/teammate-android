<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/wins"
        app:layout_constraintLeft_toLeftOf="@+id/card_view_wrapper"
        app:layout_constraintRight_toRightOf="@+id/card_view_wrapper"
        app:layout_constraintTop_toTopOf="@+id/wins">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:strokeColor="?card_stroke_color"
            app:strokeWidth="?card_stroke_width" />
    </FrameLayout>

    <TextView
        android:id="@+id/wins"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/action_bar_height"
        android:layout_marginTop="@dimen/sextuple_margin"
        android:gravity="center"
        android:text="@string/game_wins"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/draws"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/draws"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/action_bar_height"
        android:gravity="center"
        android:text="@string/game_draws"
        android:textColor="?alt_empty_view_holder_tint"
        app:layout_constraintLeft_toRightOf="@+id/wins"
        app:layout_constraintRight_toLeftOf="@+id/losses"
        app:layout_constraintTop_toTopOf="@id/wins" />

    <TextView
        android:id="@+id/losses"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/action_bar_height"
        android:gravity="center"
        android:text="@string/game_losses"
        android:textColor="?alt_empty_view_holder_tint"
        app:layout_constraintLeft_toRightOf="@+id/draws"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/wins" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/half_margin"
        android:paddingLeft="@dimen/half_margin"
        android:paddingRight="@dimen/half_margin"
        android:textColor="?alt_empty_view_holder_tint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wins">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include
        layout="@layout/viewholder_empty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/card_view_wrapper"
        layout="@layout/expanding_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginLeft="@dimen/single_margin"
        android:layout_marginTop="@dimen/single_and_half_margin"
        android:layout_marginRight="@dimen/single_margin"
        android:elevation="@dimen/double_margin"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

