<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/quarter_margin"
    android:layout_marginLeft="@dimen/single_margin"
    android:layout_marginRight="@dimen/single_margin"
    android:layout_marginTop="@dimen/quarter_margin"
    android:padding="@dimen/half_margin">

    <TextView
        android:id="@+id/home_stat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/half_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_stat_emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/half_margin"
        app:layout_constraintBottom_toBottomOf="@+id/home_stat_time"
        app:layout_constraintLeft_toRightOf="@+id/home_stat_time"
        app:layout_constraintTop_toTopOf="@+id/home_stat_time" />

    <TextView
        android:id="@+id/home_stat_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/home_stat_name"
        app:layout_constraintLeft_toRightOf="@+id/home_stat_emoji"
        app:layout_constraintTop_toTopOf="@+id/home_stat_time" />

    <TextView
        android:id="@+id/home_stat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/home_stat_time"
        app:layout_constraintLeft_toRightOf="@+id/home_stat_emoji"
        app:layout_constraintTop_toBottomOf="@+id/home_stat_user" />

    <TextView
        android:id="@+id/away_stat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/half_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/away_stat_emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/half_margin"
        app:layout_constraintBottom_toBottomOf="@+id/away_stat_time"
        app:layout_constraintRight_toLeftOf="@+id/away_stat_time"
        app:layout_constraintTop_toTopOf="@+id/away_stat_time" />

    <TextView
        android:id="@+id/away_stat_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/away_stat_name"
        app:layout_constraintRight_toLeftOf="@+id/away_stat_emoji"
        app:layout_constraintTop_toTopOf="@+id/away_stat_time" />

    <TextView
        android:id="@+id/away_stat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/away_stat_time"
        app:layout_constraintRight_toLeftOf="@+id/away_stat_emoji"
        app:layout_constraintTop_toBottomOf="@+id/away_stat_user" />
</androidx.constraintlayout.widget.ConstraintLayout>
