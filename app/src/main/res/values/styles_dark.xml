<resources>

    <style name="AppDarkTheme" parent="AppTheme">
        <item name="elevationOverlayEnabled">true</item>

        <item name="splash_header_color">@color/grey_800</item>

        <item name="nav_bar_color">@color/dark_background</item>
        <item name="toolbar_text_color">@color/grey_300</item>

        <item name="colorPrimary">@color/dark_background</item>
        <item name="colorPrimaryDark">@color/dark_background</item>
        <item name="colorSecondary">@color/app_dark_secondary</item>

        <item name="bottom_nav_selected">@color/app_dark_secondary</item>
        <item name="bottom_nav_unselected">@color/grey_500</item>

        <item name="icon_tint">@color/grey_300</item>
        <item name="alt_icon_tint">@color/grey_300</item>
        <item name="alt_background">@color/dark_background</item>

        <item name="empty_view_holder_tint">@color/grey_300</item>
        <item name="alt_empty_view_holder_tint">@color/grey_300</item>

        <item name="alt_text_color">@color/grey_300</item>
        <item name="light_text_color">@color/grey_300</item>
        <item name="editTextColor">@color/dark_grey</item>
        <item name="input_text_color">@color/grey_300</item>
        <item name="button_text_color">@color/black</item>

        <item name="chat_background_color">@color/grey_800</item>
        <item name="chat_alt_background_color">@color/dark_background</item>
        <item name="chat_background_stroke_color">@color/grey_800</item>
        <item name="chat_alt_background_stroke_color">@color/dark_grey</item>

        <item name="colorControlNormal">@color/dark_grey</item>
        <item name="android:windowBackground">@color/dark_background</item>
    </style>

    <style name="TextAppearance.AppDarkTheme.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?alt_text_color</item>
    </style>

    <style name="TextAppearance.AppDarkTheme.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?alt_text_color</item>
    </style>

    <style name="TextAppearance.AppDarkTheme.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">?headline_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?alt_text_color</item>
    </style>

    <style name="TextAppearance.AppDarkTheme.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">?headline_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?alt_text_color</item>
    </style>

    <style name="TextAppearance.AppDarkTheme.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">?headline_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?alt_text_color</item>
    </style>

</resources>