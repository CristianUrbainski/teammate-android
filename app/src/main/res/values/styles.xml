<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="headline_font">@font/roboto</item>

        <item name="splash_header_color">@color/app_secondary</item>

        <item name="nav_bar_color">@color/grey_300</item>
        <item name="toolbar_text_color">@color/white</item>

        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary</item>
        <item name="colorSecondary">@color/app_secondary</item>

        <item name="bottom_nav_selected">@color/app_primary</item>
        <item name="bottom_nav_unselected">@color/dark_grey</item>

        <item name="icon_tint">@color/dark_grey</item>
        <item name="alt_icon_tint">@color/white</item>
        <item name="alt_background">@color/white</item>

        <item name="empty_view_holder_tint">@color/white</item>
        <item name="alt_empty_view_holder_tint">@color/dark_grey</item>

        <item name="alt_text_color">@color/white</item>
        <item name="light_text_color">@color/grey_300</item>
        <item name="editTextColor">@color/dark_grey</item>
        <item name="input_text_color">@color/dark_grey</item>
        <item name="button_text_color">@color/white</item>

        <item name="card_elevation">@dimen/eigth_margin</item>
        <item name="card_stroke_color">@color/grey_300</item>
        <item name="card_stroke_width">@dimen/no_margin</item>
        <item name="card_large_corner_radius">@dimen/half_margin</item>
        <item name="card_small_corner_radius">@dimen/quarter_margin</item>

        <item name="chat_background_color">@color/grey_300</item>
        <item name="chat_alt_background_color">@color/white</item>
        <item name="chat_background_stroke_color">@color/grey_300</item>
        <item name="chat_alt_background_stroke_color">@color/white</item>

        <item name="toolbar_default_elevation">@dimen/no_margin</item>
        <item name="toolbar_displaced_elevation">@dimen/half_margin</item>

        <item name="colorControlNormal">@color/black</item>
        <item name="colorSurface">?alt_background</item>
        <item name="colorOnSurface">?input_text_color</item>
        <item name="android:colorBackground">?alt_background</item>
        <item name="android:windowBackground">@color/app_primary</item>

        <item name="alertDialogTheme">@style/AlertDialogTheme</item>

    </style>

    <style name="AppToolBarTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="fontFamily">?headline_font</item>
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary</item>
        <item name="colorSecondary">@color/app_secondary</item>
        <item name="colorControlNormal">?toolbar_text_color</item>
        <item name="icon_tint">@color/dark_grey</item>
        <item name="alt_icon_tint">?toolbar_text_color</item>
        <item name="alt_background">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?toolbar_text_color</item>
        <item name="android:textColorPrimary">?toolbar_text_color</item>
    </style>

    <style name="TextAppearance.AppTheme.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?input_text_color</item>
    </style>

    <style name="TextAppearance.AppTheme.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?input_text_color</item>
    </style>

    <style name="TextAppearance.AppTheme.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?input_text_color</item>
    </style>

    <style name="TextAppearance.AppTheme.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">?headline_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?input_text_color</item>
    </style>

    <style name="AppTheme.NavBottomSheetStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:background">@null</item>
    </style>

    <style name="AppTheme.NavDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="bottomSheetStyle">@style/AppTheme.NavBottomSheetStyle</item>
    </style>
</resources>
